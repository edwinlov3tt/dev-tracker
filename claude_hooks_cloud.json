{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track-cloud.sh event \"$CLAUDE_TOOL_NAME\" start"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track-cloud.sh event \"$CLAUDE_TOOL_NAME\" end \"$CLAUDE_TOOL_EXIT_CODE\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track-cloud.sh end"
          }
        ]
      }
    ]
  }
}
