{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track.sh tool_start \"$CLAUDE_TOOL_NAME\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command", 
            "command": "$HOME/dev-tracker/hooks/track.sh tool_end \"$CLAUDE_TOOL_NAME\" \"$CLAUDE_TOOL_EXIT_CODE\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track.sh end"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": ".*commit.*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/dev-tracker/hooks/track.sh commit"
          }
        ]
      }
    ]
  }
}
